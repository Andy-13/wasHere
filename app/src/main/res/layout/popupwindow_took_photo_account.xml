<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <Button
        android:id="@+id/bt_take_photo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_white_button4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="拍照"
        android:textColor="#0076FF"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"
        />
    <Button
        android:layout_below="@+id/bt_take_photo"
        android:id="@+id/bt_select_photo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_white_button3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="从手机相册选择"
        android:textColor="#0076FF"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_below="@+id/bt_select_photo"
        android:id="@+id/bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_white_button2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="取消"
        android:textColor="#0076FF"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>